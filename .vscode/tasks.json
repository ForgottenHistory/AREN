{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: Run build.bat for the active file",
            "command": "${workspaceFolder}\\build.bat",
            "args": [
                "${workspaceFolder}/include",
                "main",
                "${workspaceFolder}/libs"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}